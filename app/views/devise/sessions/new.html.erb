
<div class="container min-h-screen flex items-center justify-center ml-35 font-sans antialiased text-gray-800 p-4">
  <div class="w-full max-w-md">
    <!-- Logo/Cabeçalho -->
    <div class="text-center mb-8">
      <div class="mx-auto w-16 h-16 bg-orange-600 rounded-full flex items-center justify-center mb-4">
        <i class="fas fa-lock text-white text-2xl"></i>
      </div>
      <h1 class="text-3xl font-bold text-gray-800">Acesse sua conta</h1>
      <p class="text-gray-600 mt-2">Entre com suas credenciais para continuar</p>
    </div>

    <!-- Card do Formulário -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
      <div class="px-8 py-6">
          <!-- Mensagens de erros do Devise -->
          <% if flash[:alert] %>
            <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4 rounded">
              <div class="flex">
                <div class="flex-shrink-0">
                  <i class="fas fa-exclamation-circle text-red-400"></i>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-red-700"><%= flash[:alert] %></p>
                </div>
              </div>
            </div>
          <% end %>

         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="space-y-5">
            <!-- Campo Email -->
            <div>
              <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" do %>
                E-mail<span class="text-danger">*</span>
              <% end %>
              <div class="relative">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition duration-200 peer", 
                    placeholder: "seu@email.com",
                    required: true 
                %>
                <div class="hidden peer-invalid:block text-red-600 text-xs mt-1">
                  Por favor, informe um e-mail válido.
                </div>
              </div>
            </div>

            <!-- Campo Senha -->
            <div>
              <%= f.label :password, class: "block text-sm font-medium mb-1" do %>
                Senha<span class="text-red-500">*</span>
              <% end %>
              <div class="relative">
                <%= f.password_field :password, autocomplete: "current-password", 
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition duration-200 peer", 
                    placeholder: "Sua senha",
                    required: true
                %>
                <div class="hidden peer-invalid:block text-red-600 text-xs mt-1">
                  Por favor, informe um e-mail válido.
                </div>
              </div>
            </div>

            <!-- Lembrar-me -->
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
              </div>
            <% end %>

            <!-- Botão de Login -->
            <div>
              <%= f.submit "Log in", 
                  class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm 
                  text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 
                  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200 cursor-pointer" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Links -->
      <div class="px-8 py-4 bg-gray-50 border-t border-gray-100">
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

  </div>
</div>
