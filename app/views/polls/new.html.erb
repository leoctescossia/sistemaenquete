<div class="max-w-4xl mx-auto px-4 py-8">
  <% if notice %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
      <p class="text-green-800"><%= notice %></p>
    </div>
  <% end %>

  <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
    <!-- CabeÃ§alho -->
    <div class="bg-gradient-to-r from-orange-500 to-amber-500 px-6 py-4">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-white">Nova Enquete</h1>
      </div>
    </div>

    <!-- ConteÃºdo -->
    <div class="p-6">
      <%= render "form", poll: @poll %>
    </div>
  </div>

  <div class="my-6 text-center">
    <%= link_to polls_path, class: "inline-flex items-center text-orange-600 hover:text-blue-800 font-medium transition duration-200" do %>
      <i class="fas fa-arrow-left mr-2"></i> Voltar para Enquetes
    <% end %>
  </div>
</div>