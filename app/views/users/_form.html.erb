<div class="flex items-center justify-center">
  <div class="w-full max-w-md">
    

    <!-- Card do Formulário -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
      <div class="px-8 py-6">
        <%= form_with(model: @user, local: true, class: "space-y-5") do |form| %>
          <!-- Campo Nome -->
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Nome <span class="text-red-500">*</span>
            <% end %>
            <%= form.text_field :name, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none transition duration-200",
                placeholder: "Digite o nome completo",
                required: true %>
          </div>

          <!-- Campo Email -->
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Email <span class="text-red-500">*</span>
            <% end %>
            <%= form.email_field :email, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none transition duration-200",
                placeholder: "seu@email.com",
                required: true %>
          </div>

          <!-- Campos de Senha -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Senha <span class="text-red-500">*</span>
              <% end %>
              <%= form.password_field :password, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none transition duration-200",
                  placeholder: "••••••",
                  required: true %>
            </div>

            <div>
              <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Confirmar <span class="text-red-500">*</span>
              <% end %>
              <%= form.password_field :password_confirmation, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none transition duration-200",
                  placeholder: "••••••",
                  required: true %>
            </div>
          </div>

          <!-- Campo Função -->
          <div>
            <%= form.label :role, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Função <span class="text-red-500">*</span>
            <% end %>
            <%= form.select :role, 
                [['Usuário', 'user'], ['Administrador', 'admin']], 
                { prompt: "Selecione a função" }, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none transition duration-200",
                required: true %>
          </div>

          <!-- Botão de Submit -->
          <div class="pt-4">
            <%= form.submit "Enviar Usuário", 
                class: "w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 cursor-pointer" %>
          </div>
        <% end %>
      </div>

      <!-- Rodapé com Link Voltar -->
      <div class="px-8 py-4 bg-gray-50 border-t border-gray-100">
        <div class="text-center">
          <%= link_to users_path, class: "inline-flex items-center text-orange-600 hover:text-orange-800 font-medium transition duration-200" do %>
            <i class="fas fa-arrow-left mr-2"></i> Voltar para Usuários
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>