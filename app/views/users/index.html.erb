<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Usuários</h1>

    <% if admin_signed_in? %>
      <%= link_to 'Novo Usuário', new_user_path, class: 'bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200' %>
    <% end %>

  </div>
  <!-- Alertas/Notificações -->
  <% if notice %>
    <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="fas fa-check-circle text-green-400"></i>
        </div>
        <div class="ml-3">
          <p class="text-sm text-green-700"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="fas fa-exclamation-circle text-red-400"></i>
        </div>
        <div class="ml-3">
          <p class="text-sm text-red-700"><%= alert %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Função</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-50 transition duration-150">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= user.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-600"><%= user.email %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                <%= user.admin? ? 'bg-orange-100 text-orange-800' : 'bg-blue-100 text-blue-800' %>">
                <%= user.role %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to 'Mostrar', user, class: 'text-indigo-600 hover:text-indigo-900 transition duration-150' %>
                <span class="text-gray-300">|</span>
                <%= link_to 'Editar', edit_user_path(user), class: 'text-orange-600 hover:text-orange-900 transition duration-150' %>
                <span class="text-gray-300">|</span>
                <%= link_to 'Excluir', user, 
                          method: :patch, 
                          data: { confirm: "Tem certeza?" },
                          class: 'text-red-600 hover:text-red-900 transition duration-150' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @users.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">Nenhum usuário cadastrado.</p>
    </div>
  <% end %>
</div>